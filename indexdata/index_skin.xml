<!-- ********** -->
<!-- Button - Scene specific -->
<!-- id : buttonForASinglePano -->
<!-- ********** -->

  <layer name="buttonForASinglePano"
         keep="true"
         url="%FIRSTXML%/graphics/buttonforasinglepano/esquerda_verde.png"
         align="bottomleft"
         x="10"
         y="10"
         zorder="1"
         visible="false"
         onclick="buttonForASinglePanoOnClick"
         alpha="0.7"
         onout="tween(scale, 1.0,0.5,easeOutQuad);tween(alpha,0.7,0.5,easeOutQuad);"
         onover="tween(scale, 1.2,0.5,easeOutQuad);tween(alpha,1.0,0.5,easeOutQuad);set(layer[buttonForASinglePanoover].visible, true);set(layer[buttonForASinglePano].visible, false);"
         width="35"
         height="prop"
         />


<layer name="buttonForASinglePanoover"
         keep="true"
         url="%FIRSTXML%/graphics/buttonforasinglepano/esquerda.png"
         align="bottomleft"
         x="10"
         y="10"
         zorder="1"
         visible="false"
         onclick="buttonForASinglePanoOnClick"
         alpha="0.7"
         onout="tween(scale, 1.0,0.5,easeOutQuad);tween(alpha,0.7,0.5,easeOutQuad);set(layer[buttonForASinglePano].visible, true);set(layer[buttonForASinglePanoover].visible, false);"
         onover="tween(scale, 1.2,0.5,easeOutQuad);tween(alpha,1.0,0.5,easeOutQuad);"
         width="35"
         height="prop"
         />


  <action name="buttonForASinglePanoOnClick">hideTooltip();zoomto(get(panoview.fov),smooth(400,20,100));
          mainloadscene(pano10);
      lookto(get(panoview.h), get(panoview.v), get(panoview.fov), smooth(100,50,20));
    


  </action>

  <events name="buttonForASinglePanoevents"
    onTourStart="showbuttonForASinglePano();"

    onPanoStart="showbuttonForASinglePano();"

    keep="true" />
  <action name="hidebuttonForASinglePano">set(layer[buttonForASinglePano].visible, false);</action>
  <action name="showbuttonForASinglePano">
    set(display_buttonForASinglePano, false);


    if (xml.scene == pano57, set(display_buttonForASinglePano, true); );

    if (xml.scene == pano56, set(display_buttonForASinglePano, true); );

    if (xml.scene == pano55, set(display_buttonForASinglePano, true); );


    set(layer[buttonForASinglePanoover].visible, false);

    if (display_buttonForASinglePano,
      set(layer[buttonForASinglePano].visible, true);
    ,
      hidebuttonForASinglePano();
    );
  </action>



<!-- ********** -->
<!-- Header -->
<!-- id : header -->
<!-- ********** -->

  <layer name="header"
         keep="true"
         type="container"
         bgcolor="0x000000"
         bgalpha="0.90000762951094837"
         align="top"
         x="0"
         y="0"
         zorder="2"
         enabled="false"
         capture="true"
         visible="false"
         height="44"
         width="100%"
         accuracy="1"
         />

  <events name="headerevents"
    onTourStart="showheader();"
    keep="true" />

  <action name="showheader">
    set(layer[header].visible, true);
  </action>

